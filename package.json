{
	"name": "starter-kit",
	"version": "3.0.0",
	"author": "sevnpro",
	"license": "MIT",
	"private": true,
	"browserslist": "> 0.5%, last 10 versions, not dead",
	"targets": {
		"default": {
			"distDir": "./dist",
			"context": "browser",
			"outputFormat": "global",
			"isLibrary": false,
			"optimize": true,
			"includeNodeModules": false
		},
		"main": false
	},
	"scripts": {
		"del": "del-cli --force dist",
		"dev": "parcel serve src/html/*.html --no-cache --port 3000",
		"serve": "parcel serve src/html/*.html --no-cache --port 3000 --open",
		"build": "parcel build src/html/*.html --no-cache --no-content-hash --no-scope-hoist",
		"prod": "del-cli --force dist && parcel build src/html/*.html --no-cache --no-content-hash --no-scope-hoist"
	},
	"dependencies": {
		"parcel": "latest"
	},
	"devDependencies": {
		"@parcel/packager-raw-url": "^2.0.0",
		"@parcel/transformer-sass": "latest",
		"@parcel/transformer-webmanifest": "^2.0.0",
		"del-cli": "^4.0.1",
		"posthtml-doctype": "latest",
		"posthtml-include": "latest",
		"sass": "^1.42.1"
	}
}
